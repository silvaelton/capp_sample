.row
  .column
    %h1.ui.header 
      Inscrições
.ui.hidden.divider
.row
  .column
    %table.ui.celled.table.striped
      %thead
        %tr
          %th Total de inscritos
          %th Total de homologados
          %th Total de indeferidos
          %th Total de envio de projetos
      %tbody
        %tr
          %td= @project.subscribes.count
          %td= @project.subscribes.enabled.count
          %td= @project.subscribes.recused.count
          %td 0
.ui.hidden.divider
.row
  .column
    %table.ui.celled.table.striped
      %thead
        %tr
          %th Nº
          %th CPF
          %th Pagamento
          %th Situação
          %th Envio do projeto
          %th
      %tbody
        - @project.subscribes.order('created_at DESC').each do |candidate|
          %tr
            %td= candidate.id
            %td= candidate.cpf
            %td= candidate.subscribe_paid ? "Pago" : "Não pago"  
            %td= candidate.situation.humanize
            %td
            %td
              = link_to "Visualizar", project_subscribe_path(project_id: @project, id: candidate)

