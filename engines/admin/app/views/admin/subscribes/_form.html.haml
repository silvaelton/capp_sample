= simple_form_for [@project, @subscribe], remote: true do |f|
  .fields
    .four.wide.field
      = f.input :situation, label: "Situação", as: :select, collection: ::Subscribe.situations.keys, include_blank: false
    .four.wide.field
      = f.input :paid, label: "Pagamento", as: :select, include_blank: false
  %br/
  .ui.divider
  = f.submit "Atualizar situação", class: 'ui button green', data: { disable_with: t(:disable_with)}