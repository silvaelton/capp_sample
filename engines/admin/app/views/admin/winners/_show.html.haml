.row
  .column{style: 'text-align:center'}
    %h1= @winner.winner_type.humanize.mb_chars.upcase
    %h3
      #{@winner.subscribe_participation.subscribe.name.upcase}
    %h4
      #{@winner.subscribe_participation.subscribe.city}/#{@winner.subscribe_participation.subscribe.state.name}
    
    %br/
    %br/
    %h4 Equipe Técnica
    %br/
    - if @winner.subscribe_participation.subscribe.subscribe_requireds.present? 
      - @winner.subscribe_participation.subscribe.subscribe_requireds.each do |item|
        = "#{item.name}, "
    - else
      %i Não informou equipe técnica.
    %br/
    %br/
    %h4 Equipe (não obrigatória)
    %br/
    - if @winner.subscribe_participation.subscribe.subscribe_optionals.present? 
      - @winner.subscribe_participation.subscribe.subscribe_optionals.each do |item|
        = "#{item.name}, "
    - else
      %i Não informou equipe (não obrigatória).
    %br/
    %br/
    %br/
    %br/
    = link_to image_tag('/images/download.png', size: '100x100'), @winner.subscribe_participation.participation_path_url, target: '_blank'
    %br/
    %br/
    %br/
  

