.ui.grid
  .row
    .column
      %h2 Recursos
      = link_to "Novo recurso", new_project_mean_path(@project)
  .ui.divider.hidden
  .row
    .column 
      %table.ui.table.celled
        %thead
          %tr
            %th.collapsing Nº de inscrição
            %th Nome
            %th.collapsing Data de recurso
            %th.collapsing Ação
        %tbody
          - if @means.present?
            - @means.each do |item|
              %tr
                %td= item.subscribe_id
                %td= item.subscribe.name
                %td= item.created_at.strftime("%d/%m/%Y")
                %td= link_to "Visualizar", project_mean_path(@project, item)
          - else
            %tr
              %td{colspan: 3}
                %i Nenhum recurso realizado.