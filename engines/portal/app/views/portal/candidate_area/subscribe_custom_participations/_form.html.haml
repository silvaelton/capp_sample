= simple_form_for @participation, url: project_candidate_area_subscribe_custom_participations_path(@project) do |f|
  
  %br/
  /%br/
  /%h3 Adicionar a Equipe
  /%br/
  /= f.simple_fields_for :subscribe_custom_teams do |builder|
  /  = render 'subscribe_custom_team_fields', f: builder
  /= link_to_add_fields "Adicionar", f, :subscribe_custom_teams
  /%br/
  /%br/
  %h3 Adicionar o Projeto
  %br/
  = f.input :archive_file_one, label: "08 pranchas, em PDF, no formato A2 (420 x 594 mm) (30 MB)"
  = f.input :archive_file_two, label: "Imagem ilustrativa em formato PNG ou JPG, (3MB)"  
  = f.input :archive_file_three, label: "Imagem ilustrativa em formato PNG ou JPG, (3MB)"  
  = f.input :archive_file_four, label: "Arquivo de apresentação em PDF, (20MB)"  

  %br/
  %br/
  = f.submit "Salvar", class: 'ui button green', data: { disable_with: "Carregando..."}