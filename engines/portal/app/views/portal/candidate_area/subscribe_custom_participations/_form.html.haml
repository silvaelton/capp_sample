  %br/
  %br/
  %h3 Adicionar a Equipe
  %br/
  = f.simple_fields_for :subscribe_custom_teams do |builder|
    = render 'subscribe_custom_team_fields', f: builder
  = link_to_add_fields "Adicionar", f, :subscribe_custom_teams
  %br/
  %br/
  %h3 Adicionar o Projeto
  %br/
  = f.input :archive_file_one, label: "Arquivo em PDF, com tamanho m√°ximo de 20MB contendo as 6 pranchas"
  = f.input :archive_file_two, label: "Imagem ilustrativa em formato PNG ou JPG, (3MB)"  

  %br/
  %br/
  = f.submit "Salvar", class: 'ui button green' data: { disable_with: "Carregando..."}